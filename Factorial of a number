#include <stdio.h>

#include <stdlib.h>

int main() {
  int n;
  int i = 1;
  int x = 1;
  printf("What number do you  want to get it factorial?\ninput number:\n");
  scanf("%i", & n);
  while (i <= n) {
    x = x * i;
    i = i + 1;
  }
  printf("The factorial is %i\n", x);
  system("pause");
  return 0;
}
